---
interface Props {
  title: string;
}

const { title } = Astro.props;

import "@fontsource-variable/open-sans";
---

<!doctype html>
<html lang="en" class="select-none scroll-smooth font-openSans">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Comercios de Tandil" />
    <meta name="keywords" content="Comercios, Tandil" />
    <meta name="author" content="Mauro Ortmann" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-slate-600 grid grid-rows-[auto_1fr_auto] min-h-svh">
    <slot />
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
</style>
